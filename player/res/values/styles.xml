<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewMiddleWhite">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#d8d8d8</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="messagebox" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:background">@android:color/transparent</item>
		
		
	</style>
	
    <style name="StatusbarToast" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item> 
        <item name="android:windowExitAnimation">@null</item> 
    </style>
    <style name="mydialoganimation">
        <item name="android:windowEnterAnimation">@anim/dialog_show_in</item> 
        <item name="android:windowExitAnimation">@anim/dialog_dismiss_out</item> 
        
        </style>
        <style name="settingmenuanimation">
        <item name="android:windowEnterAnimation">@anim/settingmenu_dialog_show_in</item> 
        <item name="android:windowExitAnimation">@anim/settingmenu_dialog_dismiss_out</item> 
        
        </style>
	    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
		<!-- <item name="android:background">@android:color/transparent</item>
		<item name="android:gravity">right</item>
		<item name="android:windowBackground">@android:color/transparent</item> -->
		
</resources>
