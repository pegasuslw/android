<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="167dp"
    android:layout_height="54dp" >
    	
	<com.tcl.common.mediaplayer.utils.TypefaceTextView 
	    android:id="@+id/text"
	    android:layout_centerInParent="true"
	    android:layout_height="wrap_content"
	    android:textColor="@drawable/setting_itemtextcolor_selector" 
	    android:textSize="23.3sp"
	    android:layout_width="wrap_content"/>
	<!--    android:textColor="@drawable/tcl_font_color"  
	  这里设置字体颜色只是设置了初始化的颜色，焦点变化时颜色并没有变化，颜色变化的效果是在代码SeletcItem.java中实现的  -->
	<ImageView 
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:visibility="invisible"
        android:src="@drawable/setting_select"/>
	
</RelativeLayout>
