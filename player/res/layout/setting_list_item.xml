<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="437dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout 
        android:id="@+id/setting_item"
        android:layout_width="fill_parent"
        android:layout_height="81px"       
        >
        <ImageView
         android:id="@+id/setting_item_img"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/setting_select"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="43px"
         android:layout_centerVertical="true"
         android:visibility="invisible"
         /> 
        
        <com.tcl.common.mediaplayer.utils.TypefaceTextView 
        android:id="@+id/setting_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:textSize="36px"
        android:layout_centerVertical="true"
         android:layout_toRightOf="@id/setting_item_img"
        android:textColor="@drawable/setting_itemtextcolor_selector"
        />
