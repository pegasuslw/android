<?xml version="1.0" encoding="UTF-8"?>   
<selector xmlns:android="http://schemas.android.com/apk/res/android">    
    <!-- Non focused states     -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false"  android:state_enabled="true" android:drawable="@drawable/player_3d_normal" />   
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false"  android:state_enabled="true" android:drawable="@drawable/player_3d_normal" />   
    <!--  Focused states -->   
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false"  android:state_enabled="true" android:drawable="@drawable/player_3d_focused" />   
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/player_3d_focused" />    
    <!--Pressed   -->
    <item android:state_pressed="true"  android:state_enabled="true" android:drawable="@drawable/player_3d_click" />   
    
    <!--disable   -->
    <item android:state_enabled="false" android:drawable="@drawable/player_3d_disable" /> 
  
</selector> 
